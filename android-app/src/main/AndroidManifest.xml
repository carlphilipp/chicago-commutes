<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.cph.chicago">

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".core.App"
        android:allowBackup="true"
        android:configChanges="uiMode"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ChicagoCommutes"
        android:usesCleartextTraffic="true">

        <activity
            android:name=".core.activity.BaseActivity"
            android:alwaysRetainTaskState="true"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data
                android:name="error"
                android:value="false" />
        </activity>
        <activity
            android:name=".core.activity.ErrorActivity"
            android:configChanges="uiMode"
            android:exported="false"
            android:label="@string/bus_bound_activity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".core.activity.MainActivity"
            android:configChanges="uiMode"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".core.activity.TrainListStationActivity"
            android:configChanges="uiMode"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".core.activity.BusBoundActivity"
            android:configChanges="uiMode"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".core.activity.BikeStationComposable"
            android:configChanges="uiMode"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".core.activity.DeveloperOptionsActivity"
            android:configChanges="uiMode"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".core.activity.AlertActivity"
            android:configChanges="uiMode"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".core.activity.TrainMapActivity"
            android:configChanges="uiMode"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".core.activity.BusMapActivity"
            android:configChanges="uiMode"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".core.activity.SearchActivity"
            android:configChanges="uiMode"
            android:exported="false"
            android:screenOrientation="portrait" />

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />
    </application>

    <queries>
        <package android:name="com.google.android.maps" />
        <package android:name="com.google.android.apps.maps" />
    </queries>

</manifest>
