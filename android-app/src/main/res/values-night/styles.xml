<resources>

    <!-- Night Theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/darkPrimaryColor</item> <!-- Top action bar color -->
        <item name="colorPrimaryDark">@color/darkPrimaryColorDarker</item> <!-- Top status color -->
        <item name="colorSecondary">@color/darkFloatingButton</item> <!-- Floating button background -->
        <item name="colorAccent">@color/darkColorAccent</item> <!-- Search bar / some windows -->
        <item name="android:textColorPrimary">@color/darkColorTextPrimary</item>
        <item name="android:textColorSecondary">@color/darkColorTextSecondary</item>
        <item name="android:navigationBarColor">@color/darkNavigationBar</item>
        <item name="favoriteCardBackground">@color/favoriteCardBackground</item>
        <item name="streetViewBackground">@color/colorPrimary</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:windowBackground">@drawable/bg_selector_dark</item>
        <item name="iconTint">@color/white</item>
        <item name="textAppearance">@style/AppTextAppearanceDark</item>
        <item name="iconStationTint">@color/white</item>
        <item name="popupBackground">@drawable/bg_selector_popup_dark</item>
        <item name="alertDialogTheme">@style/AlertDialogDark</item>
        <item name="colorControlHighlight">@color/darkPrimaryColor</item>
        <item name="materialButtonStyle">@style/ButtonColor</item>
    </style>

    <style name="AppTextAppearanceDark" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AlertDialogDark" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="colorAccent">@color/darkColorAccent</item>
    </style>

    <!-- Button -->
    <style name="ButtonColor" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/darkColorTextPrimary</item>
    </style>

    <!-- Arrow style -->
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <!-- Alert Dialog -->
    <style name="AlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog.Centered">
        <item name="colorAccent">@color/white</item>
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/Alert.Button</item>
        <item name="buttonBarNeutralButtonStyle">@style/Alert.Button</item>
    </style>

    <style name="Alert.Button" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
